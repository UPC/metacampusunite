<div id="{{carouselid}}" class="carousel slide" data-ride="carousel">
  {{#showindicators}}
  <ol class="carousel-indicators">
    {{#elements}}
    <li data-target="#{{carouselid}}" data-slide-to="{{@index}}" class="{{active}}"></li>
    {{/elements}}
  </ol>
  {{/showindicators}}
  <div class="carousel-inner" role="listbox" style="height: {{carouselheight}}px">
    {{#elements}}
    <div class="carousel-item {{active}}">
      {{#url_link}}<a href="{{url_link}}" target="{{url_link_target}}">{{/url_link}}
          <div class="carousel-caption d-none d-md-block">
              <h3 class="carousel-item-title">{{{title}}}</h3>
              <p class="carousel-item-content">{{{content}}}</p>
          </div>
          <img class="d-block img-fluid" style="min-height: {{carouselheight}}px" src="{{url}}" alt="{{alt}}" />
      {{#url_link}}</a>{{/url_link}}
    </div>
    {{/elements}}
  </div>
  {{#showindicators}}
  <a class="carousel-control-prev" href="#{{carouselid}}" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#{{carouselid}}" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
  {{/showindicators}}
  {{> block_carousel/carousel_manage_slides_button }}
</div>
{{#js}}
require(['jquery', 'theme_boost/loader', 'theme_boost/bootstrap/carousel'], function($) {
  $('#{{carouselid}}').carousel();
});
{{/js}}
